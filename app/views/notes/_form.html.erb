<%= form_for(@note) do |f| %>
  <% if @note.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@note.errors.count, "error") %> prohibited this note from being saved:</h2>

      <ul>
      <% @note.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="fieldFirst">
    <%= f.label :name %><br />
    <%= f.text_field :name ,:placeholder => 'Enter Task Title' %>
  </div>
  <div class="field" id="elm1" name="elm1" rows="15" cols="80" style="width: 80%">
    <%= f.label :description %><br />
    <%= f.text_area :description ,:placeholder => 'Enter a short task description' %>
  </div>
<!--
  <div class="field">
    <%= f.label :'Due Date' %><br />
    <%= f.date_select :dueDate %>
  </div>
-->
  <div class="actionsLast"><%= submit_tag 'Save Task', :class => 'button' %></div>
<% end %>
