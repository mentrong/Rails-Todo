<div id="wrapper">
	<h1>Stew's ToDo List</h1>
	<div class="mod">
		<div class="mod">
			<%= link_to 'New Task', new_note_path %>
		</div>
	</div>
	<% @notes.each do |note| %>
	
	<div class="todoItem">
		<div class="mod">
			<div id="itemName" class="hd"><%= note.name %></div>
			<div id="itemDescription" class="bd"><%= note.description %></div>
			<div id="itemOptions" class="ft">
				<ul>
					<li><span class="due">Due Date:</span> <%= note.dueDate %>	</li>
					<li>|</li>
					<li><%= link_to 'Edit', edit_note_path(note) %></li>
					<li><%= link_to 'Done', note, :confirm => 'Did you really finish?', :method => :delete %></li>
				</ul>
			</div>
		</div>
	</div>
	<% end %>
</div>
