<div class="grid_6">
	<div class="mod">
		<h2>Sunday School Lessons</h2>
	</div>
</div>
<div class="grid_6">
	<div class="mod f-right">
		<span><%= link_to 'New Lesson', new_lesson_path %></span>
	</div>
</div>
<div class="grid_6">
	<div class="mod">
		<p>Below are all the lessons. To create a new lesson click the <i>New Lesson</i> button.</p>
	</div>
</div>
<div class="grid_9">
	<div class="mod">
		<table>
			<% @lessons.each do |lesson| %>
			<tr>
				<td><%= link_to lesson.title, lesson %></td>
				<td><%= lesson.date %></td>
				<td><%= lesson.date %></td>
				<td><%= lesson.preview %></td>
			</tr>
		</table>
	</div>
</div>
<% end %>




