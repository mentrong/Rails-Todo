<%= form_for(@lesson) do |f| %>
  <% if @lesson.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@lesson.errors.count, "error") %> prohibited this lesson from being saved:</h2>

      <ul>
      <% @lesson.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="formWrapper">
	<div class="formGrid_1">
	  <div class="field">
	    <%= f.label :title %><br />
	    <%= f.text_field :title ,:placeholder => 'Enter a Title' %>
	  </div>
	 </div>
	 <div class="formGrid_1">
	 	<div class="field">
	    	<%= f.label :scripture %><br />
	    	<%= f.text_field :scripture ,:placeholder => 'Enter a Scripture Refrance' %>
	  	</div>
	  </div>
	  <div class="clear"></div>
	  <div class="formGrid_3">
		  <div class="field preview">
		    <%= f.label :preview %><br />
		    <%= f.text_area :preview ,:placeholder => 'Enter a short preview here.' %>
		  </div>
	  </div>
	  <div class="clear"></div>
	  <div class="formGrid_3">
		  <div class="field body">
		    <%= f.label :body %><br />
		    <%= f.text_area :body ,:placeholder => 'Craft your lesson here.' %>
		  </div>
	  </div>
	  <div class="clear"></div>
<!--
	  <div class="field">
	    <%= f.label :date %><br />
	    <%= f.date_select :date %>
	  </div>
-->
	  <div class="actions">
	    <%= f.submit 'Create Lesson', :class => 'button' %>
	  </div>
	<% end %>
</div>