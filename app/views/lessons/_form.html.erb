<%= form_for(@lesson) do |f| %>
  <% if @lesson.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@lesson.errors.count, "error") %> prohibited this lesson from being saved:</h2>

      <ul>
      <% @lesson.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="formWrapper">
	<div class="formGrid_1">
	  <div class="field">
	    <%= f.label :title %><br />
	    <%= f.text_field :title ,:placeholder => 'Enter a Title' %>
	  </div>
	 </div>
	 <div class="formGrid_1">
	 	<div class="field">
	    	<%= f.label :scripture %><br />
	    	<%= f.text_field :scripture ,:placeholder => 'Enter a Scripture Reference' %>
	  	</div>
	  </div>
	  <div class="formGrid_1">
	  	<div class="field">
	    	<%= f.label :date, 'Release Date' %><br />
	    	<%= f.date_select :date %>
	  	</div>
	  </div>
	  <div class="clear"></div>
	  <div class="formGrid_3">
		  <div class="field preview" id="preview">
		    <%= f.label :preview %><br />
		    <%= f.text_area :preview ,:placeholder => 'Enter a short preview here.' %>
		  </div>
	  </div>
	  <div class="clear"></div>
	  <div class="formGrid_3">
		  <div class="field body" id="mceEditor" name="elm1" rows="15" cols="80">
		    <%= f.label :body %><br />
		    <%= f.text_area :body ,:placeholder => 'Craft your lesson here.', :class => 'mceEditor' %>
		  </div>
	  </div>
	  <div class="clear"></div>
<!--
	  <div class="field">
	    <%= f.label :date %><br />
	    <%= f.date_select :date %>
	  </div>
-->
	<div class="formGrid_3">
	  <div class="actions f-right">
	    <%= f.submit 'Save Lesson', :class => 'button' %>
	  </div>
	</div>
	<% end %>
</div>
<script type="text/javascript">
	tinyMCE.init({
		mode : "specific_textareas",
        editor_selector : "mceEditor",
		theme : "simple"
	});
</script>